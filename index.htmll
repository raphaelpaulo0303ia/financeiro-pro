<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financeiro Pro | Raphael Designer .</title>.
    <style>
        :root { --primary: #00c897; --dark: rgba(18, 18, 18, 0.98); --card-bg: rgba(255, 255, 255, 0.98); }
        body { font-family: 'Inter', sans-serif; margin: 0; padding: 0; background-color: #000; background-attachment: fixed; background-position: center; background-repeat: no-repeat; background-size: cover; min-height: 100vh; transition: 0.5s; }
        
        /* LOGIN */
        #login-screen { display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100vh; text-align: center; }
        .login-box { background: var(--dark); padding: 40px; border-radius: 20px; border: 1px solid var(--primary); width: 320px; box-shadow: 0 0 20px rgba(0,200,151,0.2); }
        .btn-entrar { width: 100%; padding: 12px; background: var(--primary); border: none; border-radius: 8px; font-weight: bold; cursor: pointer; margin-top: 15px; color: white; text-transform: uppercase; }

        /* SISTEMA */
        #main-system { display: none; }
        .config-btns { position: fixed; top: 10px; right: 10px; z-index: 1000; display: flex; gap: 8px; }
        .btn-config { background: #000; color: #fff; border: 1px solid var(--primary); padding: 8px 12px; border-radius: 6px; font-size: 10px; cursor: pointer; opacity: 0.7; }
        .btn-config:hover { opacity: 1; }
        
        .header-banner { width: 100%; height: 280px; background-position: center; background-repeat: no-repeat; background-size: cover; border-bottom: 4px solid var(--primary); }
        .container { max-width: 1000px; margin: 0 auto; padding: 20px; }
        
        .card { background: var(--card-bg); padding: 25px; border-radius: 15px; box-shadow: 0 8px 32px rgba(0,0,0,0.3); margin-bottom: 25px; color: #333; }
        .meses-container { display: flex; gap: 12px; overflow-x: auto; padding-bottom: 15px; scrollbar-width: thin; }
        .mes-card { min-width: 150px; background: var(--dark); color: white; padding: 15px; border-radius: 12px; text-align: center; cursor: pointer; border: 2px solid transparent; flex-shrink: 0; transition: 0.3s; }
        .mes-card.active { border-color: var(--primary); transform: translateY(-3px); }
        .valor-mes { display: block; font-size: 18px; font-weight: bold; color: var(--primary); margin: 5px 0; }

        /* TABELA EDITÁVEL */
        table { width: 100%; border-collapse: collapse; background: white; border-radius: 12px; overflow: hidden; }
        th { background: #f8fafc; text-align: left; padding: 15px; font-size: 11px; color: #94a3b8; text-transform: uppercase; }
        td { padding: 12px 15px; border-bottom: 1px solid #f1f5f9; }
        .img-preview { width: 55px; height: 55px; border-radius: 6px; object-fit: cover; border: 1px solid #eee; }

        .btn-qty { background: #f1f1f1; border: none; width: 28px; height: 28px; border-radius: 6px; cursor: pointer; font-weight: bold; font-size: 16px; }
        .btn-qty:hover { background: var(--primary); color: white; }
        .qty-num { margin: 0 12px; font-weight: bold; font-size: 15px; }

        .footer-total { background: var(--dark); color: white; padding: 25px; border-radius: 12px; margin-top: 20px; display: flex; justify-content: space-between; align-items: center; }
        .total-valor { font-size: 34px; color: var(--primary); font-weight: 800; margin: 0; }

        @media print { .config-btns, .card, .meses-container, .header-banner, #login-screen, .btn-qty, .btn-del { display: none !important; } #main-system { display: block; } body { background: white; } .footer-total { color: black; border-top: 2px solid #000; } }
    </style>
</head>
<body>

    <div id="login-screen">
        <div class="login-box">
            <h2 style="color: var(--primary); margin-top:0; letter-spacing: 2px;">RAPHAEL DESIGNER</h2>
            <p style="font-size: 11px; color: #666; text-transform: uppercase;">Controle de Fechamento Mensal</p>
            <input type="password" id="input-senha" style="width:100%; padding:12px; border-radius:8px; border:none; background:#1a1a1a; color:#fff; box-sizing:border-box; text-align:center; font-size: 18px;" placeholder="CHAVE">
            <button class="btn-entrar" onclick="login()">Acessar Painel</button>
            <p onclick="pedirAcesso()" style="font-size:10px; color:#555; cursor:pointer; margin-top:20px; text-decoration: underline;">Solicitar acesso: Raphaelpaulo0303@gmail.com</p>
        </div>
    </div>

    <div id="main-system">
        <div class="config-btns">
            <button class="btn-config" onclick="document.getElementById('in-bg').click()">+ Fundo</button>
            <button class="btn-config" onclick="document.getElementById('in-bn').click()">+ Banner</button>
            <input type="file" id="in-bg" hidden onchange="processarVisual('bg', this)">
            <input type="file" id="in-bn" hidden onchange="processarVisual('bn', this)">
        </div>

        <div class="header-banner" id="banner-visual"></div>

        <div class="container">
            <div class="meses-container" id="carrossel"></div>

            <div class="card">
                <h3 style="margin-top:0; font-size: 14px; color: var(--primary);">NOVO LANÇAMENTO</h3>
                <input type="text" id="nome" placeholder="Título do Projeto (Ex: SUNFEST)" style="width:100%; padding:14px; margin-bottom:12px; border-radius:8px; border:1px solid #ddd; font-weight: bold;">
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 12px;">
                    <select id="sel-mes" style="padding:12px; border-radius:8px; border:1px solid #ddd; background: #fff;">
                        <option value="0">Janeiro</option><option value="1">Fevereiro</option><option value="2">Março</option>
                        <option value="3">Abril</option><option value="4">Maio</option><option value="5">Junho</option>
                        <option value="6">Julho</option><option value="7">Agosto</option><option value="8">Setembro</option>
                        <option value="9">Outubro</option><option value="10">Novembro</option><option value="11">Dezembro</option>
                    </select>
                    <input type="number" id="qtd" value="1" style="padding:12px; border-radius:8px; border:1px solid #ddd; text-align: center;">
                    <input type="number" id="valor" placeholder="R$ Unitário" style="padding:12px; border-radius:8px; border:1px solid #ddd; font-weight: bold; color: var(--primary);">
                </div>
                <div style="margin-top:15px; display: flex; align-items: center; gap: 10px;">
                    <label style="font-size: 11px; font-weight: bold;">PREVIEW DA ARTE:</label>
                    <input type="file" id="foto" style="font-size:11px;">
                </div>
                <button class="btn-entrar" style="margin-top:20px;" onclick="salvar()">ADICIONAR À LISTA</button>
            </div>

            <div class="card" style="padding:0; overflow: hidden;">
                <div style="padding:20px; border-bottom: 1px solid #eee; display: flex; justify-content: space-between; align-items: center;">
                    <h3 id="tit-rel" style="margin:0; font-size: 18px;"></h3>
                </div>
                <table>
                    <thead><tr><th>Arte</th><th>Descrição</th><th style="text-align: center;">Quantidade</th><th>Subtotal</th><th></th></tr></thead>
                    <tbody id="lista"></tbody>
                </table>
                <div class="footer-total">
                    <div><span style="font-size:11px; opacity:0.6; text-transform: uppercase;">Total Acumulado</span><p class="total-valor" id="total-geral"></p></div>
                    <button onclick="window.print()" style="background:var(--primary); color:white; border:none; padding:15px 30px; border-radius:10px; font-weight:bold; cursor:pointer; letter-spacing: 1px;">GERAR PDF</button>
                </div>
            </div>
            <center><button onclick="limparTudo()" style="color: #999; border: none; background: none; cursor: pointer; font-size: 10px; margin-bottom: 30px;">Zerar todos os meses</button></center>
        </div>
    </div>

<script>
    const CHAVE_MESTRA = "2026"; 
    const EMAIL_RAPHAEL = "Raphaelpaulo0303@gmail.com";
    const mesesNomes = ["Janeiro", "Fevereiro", "Março", "Abril", "Maio", "Junho", "Julho", "Agosto", "Setembro", "Outubro", "Novembro", "Dezembro"];
    
    let db = JSON.parse(localStorage.getItem('faturas_vFinal_Rapha')) || [];
    let mesAtivo = new Date().getMonth();

    function login() {
        if(document.getElementById('input-senha').value === CHAVE_MESTRA) {
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('main-system').style.display = 'block';
            render();
        } else { alert("Senha incorreta!"); }
    }

    function pedirAcesso() {
        window.location.href = `mailto:${EMAIL_RAPHAEL}?subject=Solicitação de Acesso&body=Raphael, libere meu acesso ao sistema de contabilidade.`;
    }

    function processarVisual(tipo, input) {
        if(!input.files[0]) return;
        const reader = new FileReader();
        reader.onload = (e) => {
            const img = new Image();
            img.src = e.target.result;
            img.onload = () => {
                const canvas = document.createElement('canvas');
                // Comprime para no máximo 1280px para não estourar a memória
                const scale = Math.min(1, 1280 / img.width);
                canvas.width = img.width * scale;
                canvas.height = img.height * scale;
                canvas.getContext('2d').drawImage(img, 0, 0, canvas.width, canvas.height);
                localStorage.setItem(tipo === 'bg' ? 'custom_bg' : 'custom_bn', canvas.toDataURL('image/jpeg', 0.7));
                render();
            };
        };
        reader.readAsDataURL(input.files[0]);
    }

    function render() {
        // Carrega Visuais
        const bg = localStorage.getItem('custom_bg'); const bn = localStorage.getItem('custom_bn');
        if(bg) document.body.style.backgroundImage = `url(${bg})`;
        if(bn) document.getElementById('banner-visual').style.backgroundImage = `url(${bn})`;

        // Carrossel
        const car = document.getElementById('carrossel'); car.innerHTML = '';
        mesesNomes.forEach((m, i) => {
            const itens = db.filter(d => parseInt(d.mes) === i);
            const total = itens.reduce((acc, cur) => acc + (cur.qtd * cur.valor), 0);
            car.innerHTML += `<div class="mes-card ${i==mesAtivo?'active':''}" onclick="mudarMes(${i})">
                <h3>${m}</h3><span class="valor-mes">R$ ${total.toFixed(2)}</span></div>`;
        });

        // Tabela
        const list = document.getElementById('lista'); 
        document.getElementById('tit-rel').innerText = `Contabilidade: ${mesesNomes[mesAtivo]}`;
        list.innerHTML = ''; let somaGeral = 0;
        
        db.filter(d => parseInt(d.mes) === mesAtivo).forEach(d => {
            let sub = d.qtd * d.valor;
            somaGeral += sub;
            list.innerHTML += `<tr>
                <td><img src="${d.foto||''}" class="img-preview"></td>
                <td><strong>${d.nome}</strong><br><small style="color:var(--primary)">R$ ${d.valor.toFixed(2)}/un</small></td>
                <td style="text-align: center;">
                    <button class="btn-qty" onclick="ajustarQtd(${d.id}, -1)">-</button>
                    <span class="qty-num">${d.qtd}</span>
                    <button class="btn-qty" onclick="ajustarQtd(${d.id}, 1)">+</button>
                </td>
                <td><strong>R$ ${sub.toFixed(2)}</strong></td>
                <td><button onclick="excluir(${d.id})" style="border:none; background:none; color:#ccc; cursor:pointer">✕</button></td>
            </tr>`;
        });
        document.getElementById('total-geral').innerText = somaGeral.toLocaleString('pt-BR', {style:'currency', currency:'BRL'});
    }

    function ajustarQtd(id, delta) {
        const item = db.find(d => d.id === id);
        if (item) {
            item.qtd = Math.max(1, item.qtd + delta);
            localStorage.setItem('faturas_vFinal_Rapha', JSON.stringify(db));
            render();
        }
    }

    function salvar() {
        const n = document.getElementById('nome').value;
        const q = parseInt(document.getElementById('qtd').value);
        const v = parseFloat(document.getElementById('valor').value);
        const m = document.getElementById('sel-mes').value;
        const f = document.getElementById('foto').files[0];

        if(!n || isNaN(v)) return alert("Preencha o título e o valor unitário!");

        const addAoDb = (imgBase64) => {
            db.push({ id: Date.now(), nome: n.toUpperCase(), qtd: q, valor: v, mes: m, foto: imgBase64 });
            localStorage.setItem('faturas_vFinal_Rapha', JSON.stringify(db));
            document.getElementById('nome').value = '';
            document.getElementById('valor').value = '';
            render();
        };

        if(f) {
            const r = new FileReader();
            r.onload = (e) => {
                const img = new Image(); img.src = e.target.result;
                img.onload = () => {
                    const canvas = document.createElement('canvas');
                    canvas.width = 120; canvas.height = 120;
                    canvas.getContext('2d').drawImage(img, 0, 0, 120, 120);
                    addAoDb(canvas.toDataURL('image/jpeg', 0.8));
                };
            };
            r.readAsDataURL(f);
        } else addAoDb('');
    }

    function mudarMes(i) { mesAtivo = i; document.getElementById('sel-mes').value = i; render(); }
    function excluir(id) { if(confirm("Remover esta demanda?")) { db = db.filter(d => d.id !== id); localStorage.setItem('faturas_vFinal_Rapha', JSON.stringify(db)); render(); } }
    function limparTudo() { if(confirm("CUIDADO: Isso apagará TODOS os meses. Continuar?")) { db = []; localStorage.clear(); location.reload(); } }
    
    document.getElementById('sel-mes').value = mesAtivo;
</script>
</body>
</html>

